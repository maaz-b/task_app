<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CreateTaskActivity">

    <ScrollView
        android:id="@+id/scrollView2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="end"
                android:orientation="horizontal"
                android:paddingTop="16dp"
                android:paddingRight="22dp">

                <ImageView
                    android:id="@+id/imageViewCross"
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:layout_weight="0"
                    app:srcCompat="@drawable/x_close"
                    app:tint="@color/textColor" />
            </LinearLayout>

            <View
                android:id="@+id/view18"
                android:layout_width="match_parent"
                android:layout_height="56dp" />

            <EditText
                android:id="@+id/editTextText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@null"
                android:ems="10"
                android:hint='Write a new task...'
                android:inputType="text|textMultiLine"
                android:paddingLeft="22dp"
                android:paddingRight="22dp"
                android:singleLine="false"
                android:textSize="36dp" />

        </LinearLayout>
    </ScrollView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="22dp"
        android:layout_marginRight="22dp"
        android:layout_marginBottom="20dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <androidx.cardview.widget.CardView
                android:id="@+id/addTaskHealthCV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/secondaryAction"
                app:cardCornerRadius="8dp"
                app:cardElevation="0dp">

                <TextView
                    android:id="@+id/addTaskHealthTV"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="6dp"
                    android:paddingTop="2dp"
                    android:paddingRight="6dp"
                    android:paddingBottom="4dp"
                    android:text="HEALTH"
                    android:textColor="@color/brown"
                    android:textSize="12dp"
                    android:textStyle="normal" />
            </androidx.cardview.widget.CardView>

            <View
                android:id="@+id/view22"
                android:layout_width="8dp"
                android:layout_height="0dp"
                android:layout_weight="0" />

            <androidx.cardview.widget.CardView
                android:id="@+id/addTaskPersonalCV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/secondaryAction"
                app:cardCornerRadius="8dp"
                app:cardElevation="0dp">

                <TextView
                    android:id="@+id/addTaskPersonalTV"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="6dp"
                    android:paddingTop="2dp"
                    android:paddingRight="6dp"
                    android:paddingBottom="4dp"
                    android:text="PERSONAL"
                    android:textColor="@color/brown"
                    android:textSize="12dp"
                    android:textStyle="normal" />
            </androidx.cardview.widget.CardView>

            <View
                android:id="@+id/view21"
                android:layout_width="8dp"
                android:layout_height="0dp"
                android:layout_weight="0" />

            <androidx.cardview.widget.CardView
                android:id="@+id/addTaskWorkCV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/secondaryAction"
                app:cardCornerRadius="8dp"
                app:cardElevation="0dp">

                <TextView
                    android:id="@+id/addTaskWorkTV"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="6dp"
                    android:paddingTop="2dp"
                    android:paddingRight="6dp"
                    android:paddingBottom="4dp"
                    android:text="WORK"
                    android:textColor="@color/brown"
                    android:textSize="12dp"
                    android:textStyle="normal" />
            </androidx.cardview.widget.CardView>
            <View
                android:id="@+id/view21"
                android:layout_width="8dp"
                android:layout_height="0dp"
                android:layout_weight="0" />

            <androidx.cardview.widget.CardView
                android:id="@+id/addTaskDateCV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/secondaryAction"
                app:cardCornerRadius="8dp"
                app:cardElevation="0dp">

                <TextView
                    android:id="@+id/addTaskDateTV"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="6dp"
                    android:paddingTop="2dp"
                    android:paddingRight="6dp"
                    android:paddingBottom="4dp"
                    android:text="18-May-2025"
                    android:textColor="@color/brown"
                    android:textSize="12dp"
                    android:textStyle="normal" />
            </androidx.cardview.widget.CardView>
        </LinearLayout>

        <View
            android:id="@+id/view20"
            android:layout_width="match_parent"
            android:layout_height="20dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <androidx.cardview.widget.CardView
                android:id="@+id/addTaskClockCV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/secondaryAction"
                app:cardCornerRadius="12dp"
                app:cardElevation="0dp">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:elevation="0dp"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/imageView5"
                        android:layout_width="0dp"
                        android:layout_height="24dp"
                        android:layout_margin="18dp"
                        android:layout_weight="1"
                        android:tint="@color/textColor"
                        app:srcCompat="@drawable/clock_plus" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <View
                android:id="@+id/view19"
                android:layout_width="8dp"
                android:layout_height="0dp"
                android:layout_weight="0" />

            <com.example.practicethree.PrimeButton
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                app:cardElevation="0dp" />
        </LinearLayout>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>